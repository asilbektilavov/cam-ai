generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id              String           @id @default(cuid())
  name            String
  slug            String           @unique
  analysisMode    String           @default("yolo_gemini_events") // yolo_only | yolo_gemini_events | yolo_gemini_always
  geminiApiKey    String?          // per-org Gemini API key (overrides env var)
  createdAt       DateTime         @default(now())
  users           User[]
  branches        Branch[]
  cameras         Camera[]
  events          Event[]
  integrations    Integration[]
  searchPersons   SearchPerson[]
  notifications   Notification[]
  recordings      Recording[]
  wallLayouts     WallLayout[]
  floorPlans      FloorPlan[]
  licensePlates   LicensePlate[]
  auditLogs       AuditLog[]
  automationRules AutomationRule[]
}

model Branch {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name           String
  address        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  cameras        Camera[]
  events         Event[]

  @@unique([organizationId, name])
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String
  passwordHash   String
  role           String       @default("admin") // admin | operator | viewer
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime     @default(now())
  settings       UserSettings?
  auditLogs      AuditLog[]
}

model Camera {
  id              String            @id @default(cuid())
  name            String
  location        String
  streamUrl       String
  status          String            @default("offline")
  organizationId  String
  organization    Organization      @relation(fields: [organizationId], references: [id])
  branchId        String
  branch          Branch            @relation(fields: [branchId], references: [id], onDelete: Cascade)
  venueType       String            @default("retail")
  resolution      String            @default("1920x1080")
  fps             Int               @default(30)
  isMonitoring    Boolean           @default(false)
  isRecording     Boolean           @default(false)
  isStreaming     Boolean           @default(false)
  motionThreshold Float             @default(5.0)
  captureInterval Int               @default(5)
  retentionDays   Int               @default(30)
  // ONVIF
  onvifHost       String?
  onvifPort       Int?
  onvifUser       String?
  onvifPass       String?
  hasPtz          Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  sessions        AnalysisSession[]
  events          Event[]
  smartFeatures   SmartFeature[]
  sightings       PersonSighting[]
  recordings      Recording[]
  detectionZones  DetectionZone[]
  plateDetections PlateDetection[]
  privacyMasks    String?           // JSON array of mask zones
}

model AnalysisSession {
  id          String          @id @default(cuid())
  cameraId    String
  camera      Camera          @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  startedAt   DateTime        @default(now())
  endedAt     DateTime?
  status      String          @default("active")
  triggerType String          @default("motion")
  summary     String?
  frames      AnalysisFrame[]
}

model AnalysisFrame {
  id          String          @id @default(cuid())
  sessionId   String
  session     AnalysisSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  framePath   String
  capturedAt  DateTime        @default(now())
  aiResponse  String?
  description String?
  peopleCount Int?
  objects     String?
  detections  String?         // JSON: YOLO Detection[] with bounding boxes
}

model Event {
  id             String       @id @default(cuid())
  cameraId       String
  camera         Camera       @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  branchId       String?
  branch         Branch?      @relation(fields: [branchId], references: [id])
  type           String
  severity       String       @default("info")
  description    String
  timestamp      DateTime     @default(now())
  metadata       String?
  sessionId      String?
}

model UserSettings {
  id               String  @id @default(cuid())
  userId           String  @unique
  user             User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  notifCritical    Boolean @default(true)
  notifWarnings    Boolean @default(true)
  notifInfo        Boolean @default(false)
  notifSystem      Boolean @default(true)
  notifDailyReport Boolean @default(false)
  notifWeeklyReport Boolean @default(true)
  language         String  @default("ru")
  timezone         String  @default("utc+5")
  autoRecord       Boolean @default(true)
  cloudStorage     Boolean @default(true)
  aiQuality        String  @default("high")
}

model Integration {
  id             String         @id @default(cuid())
  organizationId String
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  type           String
  name           String
  enabled        Boolean        @default(false)
  config         String         @default("{}")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  smartFeatures  SmartFeature[]
  searchPersons  SearchPerson[]
  notifications  Notification[]

  @@unique([organizationId, type])
}

model SmartFeature {
  id            String       @id @default(cuid())
  cameraId      String
  camera        Camera       @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  featureType   String
  enabled       Boolean      @default(false)
  config        String       @default("{}")
  integrationId String?
  integration   Integration? @relation(fields: [integrationId], references: [id], onDelete: SetNull)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@unique([cameraId, featureType])
}

model SearchPerson {
  id             String           @id @default(cuid())
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name           String
  photoPath      String
  faceDescriptor String
  isActive       Boolean          @default(true)
  integrationId  String?
  integration    Integration?     @relation(fields: [integrationId], references: [id], onDelete: SetNull)
  createdAt      DateTime         @default(now())
  sightings      PersonSighting[]
}

model PersonSighting {
  id             String       @id @default(cuid())
  searchPersonId String
  searchPerson   SearchPerson @relation(fields: [searchPersonId], references: [id], onDelete: Cascade)
  cameraId       String
  camera         Camera       @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  timestamp      DateTime     @default(now())
  description    String?
  confidence     Float
  framePath      String?
  notified       Boolean      @default(false)
}

model Notification {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  integrationId  String
  integration    Integration  @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  featureType    String
  cameraId       String?
  message        String
  status         String       @default("pending")
  error          String?
  sentAt         DateTime?
  createdAt      DateTime     @default(now())
}

// --- Video Archive ---

model Recording {
  id             String    @id @default(cuid())
  cameraId       String
  camera         Camera    @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  startedAt      DateTime  @default(now())
  endedAt        DateTime?
  status         String    @default("recording") // recording | completed | error
  segmentDir     String    // relative path to segment directory
  fileSize       BigInt    @default(0)
  duration       Int       @default(0) // seconds
  createdAt      DateTime  @default(now())

  @@index([cameraId, startedAt])
  @@index([organizationId, startedAt])
}

// --- Multi-Branch Sync ---

model RemoteInstance {
  id             String         @id @default(cuid())
  organizationId String
  instanceId     String         @unique
  name           String
  branchName     String
  address        String?
  lastSyncAt     DateTime?
  status         String         @default("unknown")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  remoteEvents   RemoteEvent[]
  remoteCameras  RemoteCamera[]
}

model RemoteEvent {
  id               String         @id @default(cuid())
  remoteInstanceId String
  remoteInstance   RemoteInstance @relation(fields: [remoteInstanceId], references: [id], onDelete: Cascade)
  originalId       String
  cameraName       String
  cameraLocation   String
  type             String
  severity         String         @default("info")
  description      String
  timestamp        DateTime
  metadata         String?
  syncedAt         DateTime       @default(now())

  @@unique([remoteInstanceId, originalId])
}

model RemoteCamera {
  id               String         @id @default(cuid())
  remoteInstanceId String
  remoteInstance   RemoteInstance @relation(fields: [remoteInstanceId], references: [id], onDelete: Cascade)
  originalId       String
  name             String
  location         String
  status           String         @default("offline")
  isMonitoring     Boolean        @default(false)
  updatedAt        DateTime       @updatedAt

  @@unique([remoteInstanceId, originalId])
}

model SyncQueue {
  id        String   @id @default(cuid())
  payload   String
  attempts  Int      @default(0)
  lastError String?
  createdAt DateTime @default(now())
}

// --- Video Wall Layouts ---

model WallLayout {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name           String
  grid           String       @default("2x2") // 1x1, 2x2, 3x3, 4x4, custom
  slots          String       @default("[]") // JSON: [{position: 0, cameraId: "..."}]
  isDefault      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

// --- Floor Plans / E-map ---

model FloorPlan {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  branchId       String?
  name           String
  imagePath      String       // path to uploaded floor plan image
  cameras        String       @default("[]") // JSON: [{cameraId, x, y, rotation}]
  width          Int          @default(1000)
  height         Int          @default(700)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

// --- Detection Zones (Line Crossing, Queue, etc.) ---

model DetectionZone {
  id        String   @id @default(cuid())
  cameraId  String
  camera    Camera   @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  name      String
  type      String   // line_crossing | queue_zone | restricted_area | counting_zone
  points    String   // JSON array of {x, y} normalized coordinates (0-1)
  direction String?  // in | out | both (for line crossing)
  config    String   @default("{}") // JSON: thresholds, alerts config
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([cameraId, type])
}

// --- License Plate Recognition ---

model LicensePlate {
  id             String           @id @default(cuid())
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  number         String
  type           String           @default("neutral") // whitelist | blacklist | neutral
  ownerName      String?
  notes          String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  detections     PlateDetection[]

  @@unique([organizationId, number])
}

model PlateDetection {
  id             String        @id @default(cuid())
  licensePlateId String?
  licensePlate   LicensePlate? @relation(fields: [licensePlateId], references: [id], onDelete: SetNull)
  cameraId       String
  camera         Camera        @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  number         String        // detected plate number
  confidence     Float
  imagePath      String?       // snapshot of the plate
  timestamp      DateTime      @default(now())

  @@index([cameraId, timestamp])
  @@index([number])
}

// --- Audit Log ---

model AuditLog {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  action         String       // login, camera.create, camera.delete, settings.update, ptz.move, export.video, etc.
  target         String?      // target entity id
  targetType     String?      // camera, branch, user, integration, etc.
  details        String?      // JSON extra info
  ip             String?
  createdAt      DateTime     @default(now())

  @@index([organizationId, createdAt])
  @@index([userId, createdAt])
}

// --- Automation Rules ---

model AutomationRule {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name           String
  description    String?
  trigger        String       // JSON: {type: "event", eventType: "FIRE", cameraId?: "..."}
  conditions     String       @default("[]") // JSON: [{field, operator, value}]
  actions        String       // JSON: [{type: "notify", channel: "telegram", ...}]
  enabled        Boolean      @default(true)
  lastTriggeredAt DateTime?
  triggerCount   Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}
